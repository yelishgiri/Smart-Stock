<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartStock.Project.Views.ProductsPage"
             BackgroundColor="#ffffff">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="HorizontalOptions" Value="End"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="TextColor" Value="black"/>
            </Style>
            <Style TargetType="Border">
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="Stroke" Value="Black" />
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 4"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="PlaceholderColor" Value="#333333"/>
                <Setter Property="TextColor" Value="#333333"/>
            </Style>
            <Style x:Key="PageButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="15, 20, 15, 0"/>
                <Setter Property="BorderColor" Value="#333333"/>
                <Setter Property="BorderWidth" Value="2"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="15*, 2, 85*" RowDefinitions="*" VerticalOptions="Fill">
        <VerticalStackLayout Grid.Column="0" VerticalOptions="Fill">
            <Label 
                FontSize="30"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,20"
                >Smart Stock</Label>

            <BoxView
                Color="black"  
                Margin="0,0,0,0"
                HeightRequest="2"
                HorizontalOptions="Fill"/>

            <Button Text="Dashboard" Style="{StaticResource PageButton}"/>
            <Button Text="Products" Style="{StaticResource PageButton}" />
            <Button Text="Documents" Style="{StaticResource PageButton}"/>
            <Button Text="Log Out" Style="{StaticResource PageButton}"/>
        </VerticalStackLayout>

        <BoxView
            Grid.Column="1" Grid.RowSpan="2"
            Color="Black"  
            Margin="0,0,0,0"                   
            WidthRequest="2"  
            VerticalOptions="Fill"/>

        <VerticalStackLayout Grid.Column="2" VerticalOptions="Fill">
            <HorizontalStackLayout HorizontalOptions="End" HeightRequest="100" Spacing="20">

                <Button Text="Storage Alerts" VerticalOptions="Center"/>

                <VerticalStackLayout VerticalOptions="Center">
                    <Label FontSize="30" FontAttributes="Bold">John Doe</Label>
                    <Label>XYZ Company</Label>
                </VerticalStackLayout>

                <Image Source="profile.png"/>

            </HorizontalStackLayout>

            <Label FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Start"
                   Margin="20, 0, 0 ,20"
                   >Products</Label>

            <FlexLayout  Padding="20, 0" JustifyContent="SpaceBetween">

                <Border Stroke="Black"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 6"
                        WidthRequest="450"
                        >
                    <Entry Placeholder="Eg: Product Barcode: 77422101"
                           HorizontalTextAlignment="Center"
                           />
                </Border>

                <Border Stroke="Black"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 6"
                        WidthRequest="150"
                        >
                    <FlexLayout HorizontalOptions="Fill">
                        <Label HorizontalOptions="Start">
                            4
                        </Label>

                        <Stepper Maximum="360"
                                 Increment="1"
                                 BackgroundColor="Black"
                                 
                                 HorizontalOptions="End"/>
                    </FlexLayout>


                </Border>

                <Border Stroke="Black"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 6"
                        WidthRequest="350"
                        >
                    <Entry Placeholder="Eg: Category"
                           HorizontalTextAlignment="Center"
                           />
                </Border>

                <Button Text="Add Products" BackgroundColor="White"
                        Padding="10"
                        BorderColor="#333333"
                        BorderWidth="2"/>
            </FlexLayout>

            <Border Stroke="Black"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 6"
                    HorizontalOptions="Fill"
                    Margin="20, 20, 20, 0"
                    Padding="3"
                    >
                <FlexLayout HorizontalOptions="Fill">
                    <Image Source="searchicon.png"
                           HorizontalOptions="Start"
                           />

                    <Entry Placeholder="Search Products"
                               HorizontalOptions="Center"/>
                </FlexLayout>

            </Border>

            <Grid RowDefinitions="70*, 30*"
                  RowSpacing="20" ColumnSpacing="20"
                  Padding="20"
                  MinimumHeightRequest="435"
                  >

                <Border Grid.Row="0" HorizontalOptions="Fill"  Padding="20">
                    <Label HorizontalOptions="Start" VerticalOptions="Start"
                           >Latest Products</Label>
                </Border>

                <Border Grid.Row="1" HorizontalOptions="Fill" Padding="20">
                    <Label HorizontalOptions="Start" VerticalOptions="Start">Low Stock Products</Label>
                </Border>

            </Grid>

        </VerticalStackLayout>
    </Grid>
</ContentPage>